/* Contain floats: nicolasgallagher.com/micro-clearfix-hack/ */
@mixin clearfix() {
  zoom: 1;
  &:before {
    content: ""; display: table;
  }
  &:after {
    content: ""; display: table;
    clear: both;
  }
}

@mixin vendor-prefix($name, $argument...) {
  -webkit-#{$name}: #{$argument};
  -ms-#{$name}: #{$argument};
  -moz-#{$name}: #{$argument};
  -o-#{$name}: #{$argument};
  #{$name}: #{$argument};
}

@mixin productloadtransition() {
  position: relative;
  opacity: 1;
  top: 0;
  @include vendor-prefix(transition, opacity 500ms, top 500ms);
  &.pre-trans-hidden {
    top: 10px;
    opacity: 0;
  }
}

