  {% else %}
  background: $background-col;
  {% endif %}
}

h1 {
  font-size: $heading-font-size;
}

h2 { font-size: 5 * ($heading-font-size - 1em) / 6 + 1em; }
h3 { font-size: 4 * ($heading-font-size - 1em) / 6 + 1em; }
h4 { font-size: 3 * ($heading-font-size - 1em) / 6 + 1em; }
h5 { font-size: 2 * ($heading-font-size - 1em) / 6 + 1em; }
h6 { font-size: 1 * ($heading-font-size - 1em) / 6 + 1em; }

h1, h2, h3, h4, h5, h6 {
  font-family: $heading-font-family;
  line-height: $heading-line-height;
  font-weight: normal;
  color: $heading-text-col;
  margin: 0 0 1em;
  text-align: center;
}

a {
  text-decoration: none;
  color: inherit;
  @include vendor-prefix(transition, color 150ms, background-color 150ms);
}

blockquote {
  @extend h4;
  position: relative;
  margin: 1.5em 0;
  quotes:"\201C""\201D";
  color: inherit;
  line-height: 1.6em;
  text-align: inherit;
}
blockquote:before{
  color: $normal-text-col;
  content:open-quote;
}
blockquote:after{
  color: $normal-text-col;
  content:close-quote;
}
blockquote :first-child { display:inline; }
blockquote :last-child { margin-bottom:0; }

$input-and-button-height: 32px; /* This has to be non font-based */
$input-padding: 9px 0.6em 10px;
$button-padding: 15px 1.7em 13px;

input,
textarea {
  color: $normal-text-col;
  border: 1px solid $input-border-col;
  background: $content-bg;
  padding: $input-padding;
  max-width: 100%;
  width: 432px;
  min-height: $input-and-button-height;
  @include vendor-prefix(border-radius, 2px);
