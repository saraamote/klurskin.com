}

button,
input[type=submit],
.button {
  -webkit-appearance: none;
  display: inline-block;
  background: $button-bg-col;
  color: $button-text-col;
  border: none;
  height: auto;
  width: auto;
  padding: $button-padding;
  font-size: 1.05em;
  vertical-align: top;
  line-height: 1.2em;
  text-transform: uppercase;
  letter-spacing: 1px;

  @include vendor-prefix(border-radius, 3px);
  @include vendor-prefix(transition, opacity 200ms, background-color 150ms, border-color 150ms);

  .plain-text {
    font-family: $body-font-family;
    font-size: $body-font-size;
    /*line-height: $body-line-height;*/
    text-transform: none;
    letter-spacing: 0;
  }

